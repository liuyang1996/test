<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@color/btn_login" >

        <ImageView
            android:id="@+id/account_btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClick_back"
            android:layout_alignBottom="@+id/textView"
            android:paddingLeft="15dp"
            android:paddingTop="15dp"
            android:src="@mipmap/btn_back" />
        <TextView
            style="@style/top_memu_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:paddingTop="15dp"
            android:text="个人主页"
            android:id="@+id/textView" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/realhead"
            android:id="@+id/account_header"
            android:onClick="onClick_header"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"/>

        <!--用户名-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/account_name"
            android:layout_centerHorizontal="true"
            android:text="小鸟翩翩妃fly"
            android:layout_marginTop="110dp"/>


    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:background="#ffffcc"/>
        <include
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            layout="@layout/divider_horizontal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/white">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                 android:gravity="center_vertical"
                android:layout_marginLeft="30dp"
                android:textColor="@color/colorblack"
                android:text="@string/account_study"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/account_studyscore"
                android:gravity="center_vertical"
                android:text="90"
                android:textColor="@color/colorblack"
                android:layout_marginLeft="190dp"/>

        </LinearLayout>
        <include
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            layout="@layout/divider_horizontal" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/white"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_marginStart="30dp"
                android:textColor="@color/colorblack"
                android:text="@string/account_health"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/account_healthscore"
                android:gravity="center_vertical"
                android:text="90"
                android:textColor="@color/colorblack"
                android:layout_marginLeft="190dp"/>
        </LinearLayout>
        <include
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            layout="@layout/divider_horizontal" />


        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/account_logout"
            android:text="退出登录"
            android:onClick="onClick_logout"
            android:textSize="25dp"
            android:background="@drawable/login_btn_shape"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="100dp"
            android:textColor="@color/good"/>


    </LinearLayout>



</LinearLayout>
